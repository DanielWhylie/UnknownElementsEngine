<UserControl x:Class="UnknownElementsEditor.Editor.GameEditor.GraphicalEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnknownElementsEditor.Editor.GameEditor"
             xmlns:project="clr-namespace:UnknownElementsEditor.GameProject"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=project:UserProject, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <StackPanel x:Name="viewPortContainer">
            <Image Width="1510" Height="700" x:Name="viewPort" Loaded="StartGraphics" HorizontalAlignment="Left"/>
        </StackPanel>

        <Button Width="50" Height="20" Content="Play" HorizontalAlignment="Center" Background="White" Click="OnPlayButtonClick" Margin="0,-1370,0,0" x:Name="playButton"/>
    </StackPanel>

</UserControl>
