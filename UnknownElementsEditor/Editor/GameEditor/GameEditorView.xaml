                    <StackPanel>
                        <Button Content="Open" HorizontalAlignment="Center" Click="OnMenuClick" x:Name="openProjectButton"/>
                        <TextBlock Foreground="Red" TextAlignment="Center" Width="200" Height="20" x:Name="openErrorTextblock"/>
                    </StackPanel>
                </MenuItem>-->
                </MenuItem>
                <MenuItem Header="Exit" Click="OnMenuClick" x:Name="exitMenuItem"/>
            </Menu>
            <!--<gamepro:CreateProjectView/>-->
