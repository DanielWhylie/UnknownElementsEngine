<UserControl x:Class="UnknownElementsEditor.Editor.BoxCollider2DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnknownElementsEditor.Editor"
             xmlns:gameproject="clr-namespace:UnknownElementsEditor.GameProject"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=gameproject:BoxCollider2D, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <local:ComponentView Header="BoxCollider2D">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Remove" Click="OnRemoveButtonClick"/>
            </StackPanel>
        </Grid>
    </local:ComponentView>
</UserControl>
